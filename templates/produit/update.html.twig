{% extends ('base.html.twig') %}

{% block card %}
    <div class="card-body">
        <div class="row d-flex justify-content-between px-3 mb-3">
            <div class="d-flex align-items-center justify-content-start" style="color: #174a84">
                <i class="fas fa-file-invoice float-left fa-3x mr-4 ml-2"></i>
                <h4 class="card-title align-middle mb-0"> Nouvelle Facture </h4>
            </div>
        </div>
        <div class="card-text">
            {{ form_start(form_produit) }}


            <div class="form-group">
                {{ form_label(form_produit.categoryProduit , "Nom de produit" )  }}
            </div>

            <div class="form-group">
                {{ form_label(form_produit.typeProduit , "Nom de produit" )  }}
                {{ form_widget(form_produit.typeProduit , {'attr' : {'placeholder':" Saisir le nom de produit"}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form_produit.prixUnitProduit , "Nom de produit" )  }}
                {{ form_widget(form_produit.prixUnitProduit , {'attr' : {'placeholder':" Saisir le nom de produit"}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form_produit.descriptionProduit , "Nom de produit" )  }}
                {{ form_widget(form_produit.descriptionProduit , {'attr' : {'placeholder':" Saisir le nom de produit"}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form_produit.designationProduit , "Nom de produit" )  }}
                {{ form_widget(form_produit.designationProduit, {'attr' : {'placeholder':" Saisir le nom de produit"}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form_produit.stockProduit , "Nom de produit" )  }}
                {{ form_widget(form_produit.stockProduit , {'attr' : {'placeholder':" Saisir le nom de produit"}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form_produit.taxeProduit , "Nom de produit" )  }}
                {{ form_widget(form_produit.taxeProduit , {'attr' : {'placeholder':" Saisir le nom de produit"}}) }}
            </div>



           

            <div class="form-group text-center">
                <button class="btn btn-primary button ">Valider</button>
            </div>
            {{ form_end(form_produit) }}
        </div>

    </div>


{% endblock %}