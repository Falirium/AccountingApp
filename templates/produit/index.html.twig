{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block card %}
    <div class="card-body ">
        <div class="row d-flex justify-content-between px-3">
            <div class="d-flex align-items-center justify-content-start" style="color: #174a84">
                <i class="fas fa-user-alt float-left fa-3x mr-4 ml"></i>
                <h4 class="card-title align-middle mb-0"> Liste des Produits </h4>
            </div>
            <button class="btn text-primary border-primary my-4 btn-sm float-right button "><a class="text-primary" href="{{ path('facture.create_facture') }}">Cr√©er une facture</a></button>
        </div>
        <div class="table-responsive overflow-auto h-75">
            <table class="table table-hover table-sm table_design" >
                <thead class="text-muted">
                <tr>
                    <th  scope="col"> Reference</th>
                    <th  scope="col">Nom</th>
                    <th  scope="col">Category</th>
                    <th scope="col">Prix (en DH)</th>
                    <th  scope="col"> Taxe </th>
                    <th  scope="col"> Stock </th>
                    <th scope="col"></th>

                </tr>
                </thead>
                <tbody class="table-striped pb-1">
                {% for produit in produits %}
                    <tr>
                        <td> {{ produit.idProduit}} </td>
                        <td> {{ produit.nomProduit}} </td>
                        <td> {{ produit.categoryProduit}} </td>
                        <td> {{ produit.prixUnitProduit}} </td>
                        <td> {{ produit.taxeProduit}} </td>
                        <td> {{ produit.stockProduit}} </td>

                        <td><button type="button" class="btn  btn-sm button consulter_btn"><a class="text-success" href="{{ path('produit.consultOne',{idProduit : produit.idProduit}) }}">Consulter</a></button></td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>


    </div>


{% endblock %}
