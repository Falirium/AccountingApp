{% extends 'base.html.twig' %}

{% block title %}Achats{% endblock %}

{% block card %}
    <div class="card-body ">
        <div class="row d-flex justify-content-between px-3">
            <div class="d-flex align-items-center justify-content-start my-4" style="color: #174a84">
                <i class="fas fa-cart-plus float-left fa-3x mr-4 ml"></i>
                <h4 class="card-title align-middle mb-0"> Liste des Achats </h4>
            </div>

        </div>
        <div class="table-responsive overflow-auto h-75">
            <table class="table table-hover table-sm table_design" >
                <thead class="text-muted">
                <tr>
                    <th  scope="col"> Reference</th>
                    <th  scope="col">Fornisseur </th>
                    <th scope="col">Prix Total(en DH)</th>
                    <th  scope="col"> Date d'achat  </th>
                    <th scope="col"> </th>

                </tr>
                </thead>
                <tbody class="table-striped pb-1">
                {% for achat in achats %}
                    <tr>
                        <td> {{ achat.idAchat}} </td>
                        <td>  XXXXXXXX </td>
                        <td> XX </td>
                        <td> {{ achat.createdAt| date("m/d/Y") }} </td>
                        <td><button type="button" class="btn  btn-sm button consulter_btn"><a class="text-success" href="{{ path('client.consultOne',{idClient : client.idClient}) }}">Consulter</a></button></td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>


    </div>


{% endblock %}
