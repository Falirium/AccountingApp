{% extends ('base.html.twig') %}

{% block card %}
    <div class="card-body">
        <div class="row d-flex justify-content-between px-3 mb-3">
            <div class="d-flex align-items-center justify-content-start" style="color: #174a84">
                <i class="fas fa-paper-plane float-left fa-3x mr-4 ml-2"></i>
                <h4 class="card-title align-middle mb-0"> Nouvelle Commande </h4>
            </div>
        </div>
        <div class="card-text">
            {{ form_start(form_commande) }}


            <div class="form-group">
                {{ form_label(form_commande.idCommande , "Reference de commande" )  }}
                {{ form_widget(form_commande.idCommande , {'attr' : {'placeholder':" XXXXXXXXXXXX"}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form_commande.createdAt , "Nom de commande" )  }}
                {{ form_widget(form_commande.createdAt , {'attr' : {'placeholder':" XXXXXXXXXXXX"}}) }}
            </div>





            <div class="form-group text-center">
                <button class="btn btn-primary button ">Valider</button>
            </div>
            {{ form_end(form_commande) }}
        </div>

    </div>


{% endblock %}