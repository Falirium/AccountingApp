{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block card %}
    <div class="card-body ">
        <div class="row d-flex justify-content-between px-3">
            <div class="d-flex align-items-center justify-content-start" style="color: #174a84">
                <i class="fas fa-user-alt float-left fa-3x mr-4 ml"></i>
                <h4 class="card-title align-middle mb-0"> Liste des Commandes </h4>
            </div>
            <button class="btn text-primary border-primary my-4 btn-sm float-right button "><a class="text-primary" href="{{ path('facture.create_facture') }}">Créer une facture</a></button>
        </div>
        <div class="table-responsive overflow-auto h-75">
            <table class="table table-hover table-sm table_design" >
                <thead class="text-muted">
                    <tr>
                        <th  scope="col"> Reference</th>
                        <th  scope="col">Type</th>
                        <th  scope="col">Bénéficiaire</th>
                        <th scope="col">Prix total (en DH)</th>
                        <th  scope="col"> Date de commande </th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody class="table-striped pb-1">
                {% for commande in commandes %}
                    <tr>
                        <td> {{ commande.idCommande}} </td>
                        <td>
                            {% if (commande.achat) %}
                                Achat
                            {% else %}
                                Vente
                            {% endif %}
                        </td>
                        <td>XXX</td>
                        <td> {{ commande.createdAt | date("m/d/Y") }} </td>
                        <td><button type="button" class="btn  btn-sm button consulter_btn"><a class="text-success" href="{{ path('commande.consultOne',{idCommande : commande.idCommande}) }}">Consulter</a></button></td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>


    </div>


{% endblock %}
